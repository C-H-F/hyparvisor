{
  "name": "hyparvisor-server",
  "version": "0.0.1",
  "description": "Backend server application for hyparvisor",
  "main": "src/server.ts",
  "type": "module",
  "scripts": {
    "start": "vite-node src/server.ts",
    "dev": "nodemon --exec ./node_modules/.bin/vite-node src/server.ts",
    "build": "esbuild src/server.ts --bundle --format=esm platform=node --outdir=dist",
    "gen-sql": "drizzle-kit generate:sqlite --schema=./src/database/schema.ts --out=./_drizzle"
  },
  "author": "C-H-F",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "eslint": "^8.37.0",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.7",
    "typescript": "^5.0.3",
    "vite-node": "^0.30.1"
  },
  "dependencies": {
    "@trpc/server": "^10.29.1",
    "@types/ws": "^8.5.4",
    "argon2": "^0.31.2",
    "better-sqlite3": "^8.2.0",
    "bytes-iec": "^3.1.1",
    "drizzle-kit": "^0.17.2",
    "drizzle-orm": "^0.23.4",
    "express": "^4.18.2",
    "fast-xml-parser": "^4.2.4",
    "nanoid": "^4.0.2",
    "node-pty": "^1.0.0",
    "swagger-ui-express": "^4.6.3",
    "tmp-promise": "^3.0.3",
    "trpc-openapi": "^1.1.2",
    "ws": "^8.13.0",
    "zod": "^3.21.4"
  },
  "volta": {
    "node": "18.16.0"
  }
}
