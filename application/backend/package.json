{
  "name": "hyparvisor-server",
  "version": "0.0.1",
  "description": "Backend server application for hyparvisor",
  "main": "src/server.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun ./src/server.ts -- -p 3000",
    "dev": "bun --watch ./src/server.ts -- -p 3000",
    "prebuild": "npm run gen-sql && cat ./_drizzle/*.sql > ./_drizzle/sql.txt",
    "build": "bun build --target bun --sourcemap=inline --minify src/server.ts --outfile _dist/hyparvisor.js",
    "clean": "rimraf ./_dist && rimraf ./_drizzle",
    "gen-sql": "drizzle-kit generate:sqlite --schema=./src/database/schema.ts --out=./_drizzle"
  },
  "author": "C-H-F",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@types/bun": "^1.0.5",
    "@types/express": "^4.17.17",
    "@types/node": "^20.11.17",
    "@types/swagger-ui-express": "^4.1.6",
    "eslint": "^8.37.0",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vite-node": "^0.30.1"
  },
  "dependencies": {
    "@farjs/better-sqlite3-wrapper": "^1.0.1",
    "@trpc/server": "latest",
    "@types/ws": "^8.5.4",
    "bun-types": "^1.0.25",
    "bytes-iec": "^3.1.1",
    "drizzle-kit": "^0.17.2",
    "drizzle-orm": "^0.23.4",
    "express": "^4.18.2",
    "fast-xml-parser": "^4.2.4",
    "nanoid": "^4.0.2",
    "node-pty": "^1.0.0",
    "swagger-ui-express": "^5.0.0",
    "tmp-promise": "^3.0.3",
    "trpc-openapi": "^1.1.2",
    "ws": "^8.13.0",
    "zod": "^3.21.4"
  },
  "volta": {
    "node": "18.16.0"
  }
}
